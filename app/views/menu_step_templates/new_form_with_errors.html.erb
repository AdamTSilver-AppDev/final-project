<!-- Validation failure messages -->
<% if @menu_step.present? %>
  <% if @menu_step.errors.any? %>
    <% @menu_step.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new menu step
</h1>


<hr>

<form action="/create_menu_step" method="post">

  <div class="form-group">
    <label for="step_id">
      Step
    </label>

    <input type="text" id="step_id" name="step_id" class="form-control" value="<%= @menu_step.step_id %>">
  </div>

  <div class="form-group">
    <label for="menu_appearance_id">
      Menu appearance
    </label>

    <input type="text" id="menu_appearance_id" name="menu_appearance_id" class="form-control" value="<%= @menu_step.menu_appearance_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create menu step
  </button>
</form>

<hr>

<a href="/menu_steps">
  Go back
</a>
