<hr>

<div class="card">
  <div class="card-header">
    <h1>
      Add a Recipe
    </h1>
  </div>
  <div class="card-body">
    <form action="/create_recipe" method="post">
      <div class="form-row">
        <div class ="col">
          <label>
            Recipe Title
          </label>
        </div>
        <div class ="col">
          <label>
            Number of People Served
          </label>
        </div>
      </div>    
      <div class="form-row">
        <div class="col">
          <input type="text" class="form-control" placeholder="Title" id="title" name="title">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Number Served" id="number_served" name="number_served" >
        </div>
        <input type="hidden" class="form-control" placeholder="Total Time" name="total_time" class="form-control">
      </div>    
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" class="form-control" value = "<%= current_user.id %>">
      </div>
      <div class="form-group">
        <label for="description">
          Description
        </label>
        <textarea id="description" name="description" class="form-control" rows="1"></textarea>
      </div>
      <button class="btn btn-block btn-outline-secondary">
        Begin adding recipe steps
      </button>
    </form>
  </div>
</div>

  
<hr>

<a href="/recipes">
  Go back
</a>
