<h1>
  Edit recipe <%= @recipe.title %>
</h1>

<hr>

<div class="card">
  <div class="card-header">
    <h1>
      Add a Recipe
    </h1>
  </div>
  <div class="card-body">
    <form action="/update_recipe/<%=@recipe.id%>" method="post">
      <div class="form-row">
        <div class ="col">
          <label>
            Recipe Title
          </label>
        </div>
        <div class ="col">
          <label>
            Number of People Served
          </label>
        </div>
      </div>    
      <div class="form-row">
        <div class="col">
          <input type="text" class="form-control" placeholder="<%=@recipe.title%>" id="title" name="title" value="<%=@recipe.title%>">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="<% @recipe.number_served%>" id="number_served" name="number_served" value="<%=@recipe.number_served %>">
        </div>
        <input type="hidden" class="form-control" placeholder="<% @recipe.total_time%>" name="total_time" class="form-control" value="<%=@recipe.total_time%>">
      </div>    
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" class="form-control" value = "<%= current_user.id %>">
      </div>
      <div class="form-group">
        <label for="description">
          Description
        </label>
        <textarea id="description" name="description" class="form-control" rows="1"><%= @recipe.description %></textarea>
      </div>
      <button class="btn btn-block btn-outline-secondary">
        Update Recipe
      </button>
    </form>
  </div>
</div>
<hr>

<a href="/recipes">
  Go back to recipe list
</a>
