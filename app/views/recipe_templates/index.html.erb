<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipes
    </h1>

    <a href="/recipes/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe
    </a>
  </div>
</div>

<% @recipes.each do |recipe|%>
  <div class="card text-center mb-3">
    <div class="card-header">
      <h2>
        <%=recipe.title%>
      </h2>
    </div>
    <div class="card-body">
      <p class="card-text"><%=recipe.description%></p>
      <p> This recipe was created by <a href="account/<%=recipe.user_id%>"><%=recipe.user.email%></a> and serves <%= recipe.number_served %> </p>
      <div class = "row">
        <div class="col">
          <a href="/recipes/<%=recipe.id%>" class="btn btn-primary">View Recipe</a>          
        </div> 
      </div>
    </div>
    <div class="card-footer text-muted">
      Time to prepare: <%= recipe.total_time %> minutes
    </div>
  </div>
<% end %>
